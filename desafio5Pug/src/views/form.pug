extends layout/main.pug    
block form
    form(action="/productos" method="post")
        div(class="row mt-5")
            div(class="col-md-4 offset-1 " style="background-color: rgb(141, 138, 138) ;")
                div(class="d-flex mt-3 col-md-12 ")
                    div(class="col-md-3 offset-1 mt-2 mb-2 ")
                        label(class="" for="") Title:
                    div(class="mt-2 mb-2 ")
                        input(type="text" name="title")
                div(class="d-flex")
                    div(class="col-md-3  offset-1 mt-2 mb-2")
                        label(for="") Price:
                    div(class="col-md-2 mt-2 mb-2")
                        input(type="number" name="price")
                div(class="d-flex")
                    div(class="col-md-3  offset-1 mt-2 mb-2")
                        label(for="") Thumbnail: 
                    div(class=" mt-2 mb-2")
                        input(type="text" name="thumbnail")
                div(class="d-flex offset-1 mt-3 mb-3")
                    button(class="btn btn-primary" type="submit") Enviar
    br
    div(class="row")
        div(class=" offset-1")
            a(class="btn btn-warning" href="/productos")
                i(class="fa fa-solid fa-reply ") &nbsp; Ver Productos